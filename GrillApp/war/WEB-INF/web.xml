<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">




	<context-param>
		<param-name>db.url</param-name>
		<param-value>jdbc:h2:~/DB_Grillapp
		</param-value>
	</context-param>
	<context-param>
		<param-name>db.user</param-name>
		<param-value>sa</param-value>
	</context-param>
	<context-param>
		<param-name>db.password</param-name>
		<param-value></param-value>
	</context-param>
	<listener>
		<listener-class>org.h2.server.web.DbStarter</listener-class>

	</listener>


	<!-- Servlets -->
	<servlet>
		<servlet-name>personServlet</servlet-name>
		<servlet-class>ch.paranor.grillapp.server.services.PersonService
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>personServlet</servlet-name>
		<url-pattern>/grillapp/person</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>anlassServlet</servlet-name>
		<servlet-class>ch.paranor.grillapp.server.services.AnlassService
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>anlassServlet</servlet-name>
		<url-pattern>/grillapp/anlass</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>emailServlet</servlet-name>
		<servlet-class>ch.paranor.grillapp.server.services.EmailService
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>emailServlet</servlet-name>
		<url-pattern>/grillapp/email</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>GrillApp.html</welcome-file>
	</welcome-file-list>

</web-app>
