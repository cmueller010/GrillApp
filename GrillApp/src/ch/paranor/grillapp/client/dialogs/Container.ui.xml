<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.northPanel {
		background-color: blue;
		text-align: center;
		font-size: 40px;
		line-height: 2;
		font-family: "Copperplate Gothic Bold",serif;
		font-style: oblique;
		
	}
	
	.centerPanel {
		background-color: red;
		
	}
	
	.westPanel {
		background-color: green;
	}
	
	.southPanel {
		background-color: maroon;
		text-align: center;
		font-size: 14px;
		line-height: 4;
	}
	</ui:style>

	<g:DockLayoutPanel unit='EM'>
		<g:north size='7'>
			<g:HeaderPanel styleName="{style.northPanel}"  ui:field="panel">
				<g:Label>Welcome to Paranor Grillapp</g:Label>
			</g:HeaderPanel>
		</g:north>

		<g:center size='5'>
		<g:HeaderPanel  styleName="{style.centerPanel}" ui:field="centerpanel">
		<g:Label>Center</g:Label>
		</g:HeaderPanel>
			
		</g:center>

		<g:south size='5'>
			<g:Label styleName="{style.southPanel}">Neshanthan Nelson</g:Label>
		</g:south>
		
		<g:west size='20'>
			<g:HeaderPanel  styleName="{style.westPanel}" ui:field="westpanel">
			<g:Label>West</g:Label>
				</g:HeaderPanel>
		</g:west>

	</g:DockLayoutPanel>

</ui:UiBinder> 