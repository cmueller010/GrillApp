<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	 <ui:style>
      .pretty { border: 1px solid black; }
    </ui:style>

	<g:HTMLPanel>

		<Table class='{style.pretty}'>
			<tr>
				<td>
					<Label>Benutzername: </Label>
				</td>
				<td>
					<g:TextBox ui:field="benutzername"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>
					<Label>Passwort: </Label>
				</td>
				<td>
					<g:PasswordTextBox ui:field="passwort"></g:PasswordTextBox>
				</td>
			</tr>
			<tr>
				<td>
				</td>
				<td>
					<g:Button text="Anmelden" ui:field="anmeldenButton"></g:Button>
				</td>
			</tr>
		</Table>
	</g:HTMLPanel>
</ui:UiBinder> 