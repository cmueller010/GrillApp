<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.table {
		background-color: red;
		margin-left: auto;
		margin-right: auto;
		margin-top: 12%;
		font-size: 35px;
		width: 100px;
		height: 150px;
		color: white;
		text-align: left;
		font-size: 20%;
	}
	
	.divContainer {
		background-color: #003366;
		margin-left: auto;
		margin-right: auto;
		margin-top: 10%;
		width: 450px;
		height: 300px;
		border-radius: 18px;
		text-align: center;
		font-size: 20px;
	}
	
	.benutzernameTextBox {
		width: 200px;
	}
	
	.passwortTextBox {
		width: 200px;
	}
	
	.text {
		color: red;
		margin-top: 150px;
	}
	</ui:style>




	<g:HTMLPanel>

		<div class='{style.divContainer}'>
			<Label class='{style.text}'>Login to Grillapp</Label>

			<Table class='{style.table}'>
				<td>

				</td>
				<tr>
					<td>
						<Label>Benutzername: </Label>
					</td>
					<td>
						<g:TextBox styleName='{style.benutzernameTextBox}'
							ui:field="benutzername"></g:TextBox>
					</td>
				</tr>
				<tr>
					<td>
						<Label>Passwort: </Label>
					</td>
					<td>
						<g:PasswordTextBox styleName='{style.passwortTextBox}'
							ui:field="passwort"></g:PasswordTextBox>
					</td>
				</tr>
				<tr>
					<td>
					</td>
					<td>
						<g:Button text="Anmelden" ui:field="anmeldenButton"></g:Button>
					</td>
				</tr>
			</Table>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 